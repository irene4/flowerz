<img src={{image}} style="width: 25%">

<div>Change flower info:</div>
<form action="/{{flower.name}}/update" method="POST">
    <input type="text" placeholder="Enter new comname" name="common" value="{{flower.name}}">
    <input type="text" placeholder="Enter new genus" name="genus" value="{{flower.gen}}">
    <input type="text" placeholder="Enter new species" name="species" value="{{flower.spec}}">
    <button type="submit">Update</button>
</form>
<div>10 most recent sightings:</div>
<ul>
    {{#each names}} 
        <li>{{this.date}}, at {{this.loc}} by <a href="/person/{{this.person}}">{{this.person}}</a></li>
    {{/each}}
</ul>
