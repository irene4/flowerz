<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>flowerz</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet" type="text/css">
    <style>
        body {
            background-image: url("https://images.pexels.com/photos/1083822/pexels-photo-1083822.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260");
            background-repeat:no-repeat;
            background-size:cover;
            overflow: scroll;
        } 

        #headUl {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #F5FFFA;
            border-radius: 5px;
            opacity: 0.9;
        }

        ul{
            list-style-type: none;
        }

        .flowerlist{
            display: inline-block;
            margin: 10px;
            padding: 10px 30px;
            background-color: #F5FFFA;
            border-radius: 10px;
        }

        .flower{
            font-family: 'Roboto', sans-serif;
            text-decoration: none;
            color: #285797;
        }

        .flower:hover {
            color: rgb(250, 70, 22);
            opacity: 0.5;
        }

        .headA {
            display: block;
            color: #285797;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-family: 'Roboto', sans-serif;
        }

        .headA:hover {
            color: rgb(250, 70, 22);;
            opacity: 0.5;
        }

        h1{
            font-family: 'Roboto', sans-serif;
            color: #285797;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
            text-align: center;
        }

        .modal-content {
            background-color: #F5FFFA;
            margin: 15% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 25%;
            height: 50%;
            border-radius: 25px;
            display:inline-block;
        }

        button:hover {
            background-color: #285797;
            color: #F5FFFA;
        }

        button {
            background-color: #F5FFFA;
            color: #285797;
            border-radius: 5px;
        }

        h3{
            font-family: 'Roboto', sans-serif;
            color: #285797;
        }

        input {
            border-radius: 5px;
        }

        p {
            font-family: 'Roboto', sans-serif;
            color: #285797;
            opacity: 0.75;
        }

        li {
            font-family: 'Roboto', sans-serif;
            color: #285797;
            opacity: 0.9;
        }

        a {
            color: rgb(250, 70, 22);
            opacity: 0.75;
        }

        a:hover {
            opacity: 0.5;
        }

        #info {
            display: inline-block;
            background-color: #F5FFFA;
            margin: auto;
            padding: 20px;
            border: 1px solid #888;
            border-radius: 5px;
            width: 50%;
            margin: 2%;
            opacity: 0.9;
            text-align: center;
        }
    </style>
    
</head>
<body>
    <ul id="headUl">
        <li id="headLi"><a class="headA" href="/" style="float:left">Flowers</a></li>
        <li id="headLi"><a class="headA" href="#" onclick="return false;" id="insert" style="float:right">Insert New Sighting</a></li>
    </ul>

    <div class="modal fade" id="insertModal" >
        <div class="modal-dialog">
            <div class="modal-content">
                <h3>New Sighting</h4>
                <form action="/insert" method="POST">
                    <p>Common Name: &nbsp; <input type="text" placeholder="Enter flower name" name="flower"></p>
                    <p>Person's Name: &nbsp; <input type="text" placeholder="Enter person name" name="person"></p>
                    <p>Location: &nbsp; <input type="text" placeholder="Enter location" name="loc"></p>
                    <p>Date Sighted: &nbsp; <input type="text" placeholder="Enter date" name="date"></p>
                    <button id="submitBtn"type="submit">Submit</button>
                </form>
                <br />
                <button class="btn" id="close">Cancel</button>
            </div>
        </div>
    </div>
 
    {{{body}}}
 
</body>
</html>

<script>

        document.getElementById('insert').onclick = function() {
            document.getElementById('insertModal').style.display = "block";
        };

        document.getElementById("close").onclick = function() {
            document.getElementById('insertModal').style.display = "none";
        }

        document.getElementById("submitBtn").onclick = function() {
            document.getElementById('insertModal').style.display = "none";
        }

        document.getElementById("updateBtn").onclick = function() {
            document.getElementById('updateDiv').style.display = "inline-block";
            document.getElementById("updateBtn").style.display = "none";
        }
        document.getElementById("cancelUpdate").onclick = function() {
            document.getElementById('updateDiv').style.display = "none";
            document.getElementById("updateBtn").style.display = "inline-block";
        }
    </script>